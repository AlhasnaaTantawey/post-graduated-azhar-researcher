<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="invisible"
            android:background="@color/white"
            tools:context="azhar.researcher.pg_azharresearcher.GrantInstructureFragment">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@drawable/slogan" />

            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="الوافدين" />

            <TextView
                android:id="@+id/firstSupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="right"
                android:textColor="@color/blue"
                android:textSize="19dp"
                android:textStyle="bold"
                tools:text="اولا : المستندات المطلوبه من القسم " />

            <TextView
                android:id="@+id/firstRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                tools:text="مذكره مجلس القسم على المنح" />

            <TextView
                android:id="@+id/secondtSupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="right"
                android:textColor="@color/blue"
                android:textSize="19dp"
                android:textStyle="bold"
                tools:text="ثانيا : المستندات المطلوبه من القسم " />

            <TextView
                android:id="@+id/secondRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                tools:text="1-مذكره مجلس القسم على المنح" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:visibility="invisible"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/thirdSupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="right"
                android:textColor="@color/blue"
                android:textSize="19dp"
                android:textStyle="bold"
                tools:text="اولا : المستندات المطلوبه من القسم " />
            <TextView
                android:id="@+id/thirdRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                tools:text="مذكره مجلس القسم على المنح" />
            <TextView
                android:id="@+id/mountofMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="60dp"
                android:textStyle="bold"
                tools:text="مذكره مجلس القسم على المنح" />
            <TextView
                android:id="@+id/palastin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:text="مذكره مجلس القسم على المنح" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>