<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            tools:context="azhar.researcher.pg_azharresearcher.GrantInstructureFragment"
            android:background="@color/white">


            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="التقديم على دورتين مارس واكتوبر ماجستير + دكتوراه" />

            <TextView
                android:id="@+id/firstNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                tools:text="يبدا تقديم دوره مارس من اول شهر فبراير" />

            <TextView
                android:id="@+id/firstSupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="right"
                android:textColor="@color/blue"
                android:textSize="19dp"
                android:textStyle="bold"
                tools:text="اولا : المستندات المطلوبه من القسم " />

            <TextView
                android:id="@+id/secondNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                tools:text="يبدا تقديم دوره مارس من اول شهر فبراير" />

            <TextView
                android:id="@+id/firstRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="1-مذكره مجلس القسم على المنح" />


            <TextView
                android:id="@+id/thirdNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                tools:text="يبدا تقديم دوره مارس من اول شهر فبراير" />

<View
    android:id="@+id/line1"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_margin="15dp"
    android:background="@color/black"
    android:visibility="invisible"
    />


            <TextView
                android:id="@+id/firstSupTitlePartTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="right"
                android:textColor="@color/blue"
                android:textSize="19dp"
                android:textStyle="bold"
                tools:text="اولا : المستندات المطلوبه من القسم " />


            <TextView
                android:id="@+id/secondNotePartTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                tools:text="يبدا تقديم دوره مارس من اول شهر فبراير" />

            <TextView
                android:id="@+id/firstRequiredPartTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="1-مذكره مجلس القسم على المنح" />


            <TextView
                android:id="@+id/thirdNotePartTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                tools:text="يبدا تقديم دوره مارس من اول شهر فبراير" />
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="15dp"
                android:background="@color/black"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/finalNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:background="@drawable/gray_border"
                android:padding="10dp"
                android:visibility="invisible"

                tools:text="يبدا تقديم دوره مارس من اول شهر فبراير" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>