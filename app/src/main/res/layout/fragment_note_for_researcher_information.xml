<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/textView_notesFragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="الملاحظات"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            />

        <EditText
            android:id="@+id/edittext_notesFragment_notes"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:hint="@string/textForResearcherNote"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:gravity="right"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/snotesshape"
            />

        <Button
            android:id="@+id/button_notesFragment_finish"
            android:layout_width="wrap_content"
            android:text="ارسال ملاحظه "
            android:textSize="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:backgroundTint="@color/blue"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>